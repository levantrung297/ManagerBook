<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.htn.managerbook.MainActivity">

   <TextView
       android:text="Quản Lý Danh Sách"
       android:textSize="21pt"
       android:textColor="#fff"
       android:background="#0d933a"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <Button
       android:id="@+id/btnthemtacgia"
       android:layout_margin="5dp"
       android:text="Thêm tác giả"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   <Button
       android:id="@+id/btndanhsach"
       android:layout_margin="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   <Button
       android:id="@+id/btnquanlydanhsach"
       android:layout_margin="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
</LinearLayout>
